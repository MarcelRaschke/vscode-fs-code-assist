{
  "name": "toadman-code-assist",
  "displayName": "Toadman Code Assist",
  "description": "Stingray Intellisense, debugging and code browsing. A fork of Fatshark's code assist",
  "icon": "resources/toadman-code-assist.png",
  "version": "0.2.7",
  "publisher": "Toadman",
  "engines": {
    "vscode": "^1.63.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/catdawg/vscode-fs-code-assist.git"
  },
  "author": {
    "url": "https://toadmaninteractive.com/",
    "name": "Toadman",
    "email": "rui.campos@thetoadman.com"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "toadman",
    "stingray",
    "hydra",
    "debugger",
    "lua",
    "sjson"
  ],
  "activationEvents": [
    "onCommand:toadman-code-assist.Target.scan",
    "onCommand:toadman-code-assist.Connection.attachDebugger",
    "workspaceContains:settings.ini",
    "onUri",
    "onLanguage:lua",
    "onLanguage:sjson",
    "onTaskType:hydra"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "toadman-code-assist.Target.scan",
        "title": "Scan for Instances",
        "category": "Hydra",
        "icon": "$(search)"
      },
      {
        "command": "toadman-code-assist.Compiler.reconnect",
        "title": "Reconnect the compiler if it failed to connect before.",
        "category": "Hydra"
      },
      {
        "command": "toadman-code-assist.Connection.attachDebugger",
        "title": "Attach Debugger",
        "category": "Hydra",
        "icon": "$(debug-alt)"
      },
      {
        "command": "toadman-code-assist.Connection.disconnect",
        "title": "Disconnect",
        "category": "Hydra",
        "icon": "$(close)"
      },
      {
        "command": "toadman-code-assist.Connection.executeCommand",
        "title": "Execute Command",
        "category": "Hydra"
      },
      {
        "command": "toadman-code-assist.Connection.executeLua",
        "title": "Execute Lua",
        "category": "Hydra"
      },
      {
        "command": "toadman-code-assist.Connection.executeSelection",
        "title": "Execute Selection",
        "category": "Hydra"
      },
      {
        "command": "toadman-code-assist.Connection.executeFile",
        "title": "Execute File",
        "category": "Hydra"
      },
      {
        "command": "toadman-code-assist.Connection.reloadResources",
        "title": "Refresh Modified Resources",
        "category": "Hydra",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "toadman-code-assist.flushToolcenterConfig",
        "title": "Sync Toolcenter Config",
        "category": "Hydra",
        "icon": "$(cloud-download)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "toadman-code-assist.Target.scan",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "toadman-code-assist.Connection.executeSelection",
          "group": "Hydra",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "toadman-code-assist.flushToolcenterConfig",
          "group": "navigation",
          "when": "view == toadman-code-assist-Targets"
        },
        {
          "command": "toadman-code-assist.Connection.reloadResources",
          "when": "view == toadman-code-assist-Connections",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "toadman-code-assist.Target.scan",
          "when": "viewItem == target",
          "group": "inline@1"
        },
        {
          "command": "toadman-code-assist.Connection.attachDebugger",
          "when": "viewItem == connection",
          "group": "inline@1"
        },
        {
          "command": "toadman-code-assist.Connection.disconnect",
          "when": "viewItem == connection",
          "group": "inline@2"
        },
        {
          "command": "toadman-code-assist.Connection.executeCommand",
          "when": "viewItem == connection"
        },
        {
          "command": "toadman-code-assist.Connection.executeLua",
          "when": "viewItem == connection"
        },
        {
          "command": "toadman-code-assist.Connection.executeSelection",
          "when": "viewItem == connection"
        },
        {
          "command": "toadman-code-assist.Connection.executeFile",
          "when": "viewItem == connection"
        },
        {
          "command": "toadman-code-assist.Connection.reloadResources",
          "when": "viewItem == connection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Toadman Code Assist",
      "properties": {
        "Hydra.toolchainPath": {
          "type": "string",
          "scope": "window",
          "default": "",
          "description": "Toolchain root, e.g. `C:/BitSquidBinaries`\nDefaults to `%BsBinariesDir%` or `C:/BitSquidBinaries`."
        },
        "Hydra.toolchainName": {
          "type": "string",
          "scope": "window",
          "default": "hydra",
          "description": "Toolchain name, e.g. `hydra`.\nDefaults to `hydra`."
        },
        "Hydra.platform": {
          "type": "string",
          "scope": "window",
          "default": "win32",
          "description": "Default platform name, e.g. `win32`, `xb1`, `ps4`.\nDefaults to `win32`."
        }
      }
    },
    "languages": [
      {
        "id": "stingray-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      },
      {
        "id": "crashlog",
        "aliases": [
          "Stingray Crashlog"
        ],
        "extensions": [
          ".log"
        ],
        "configuration": "./language-configuration-crashlog.json"
      },
      {
        "id": "lua",
        "aliases": [
          "Stingray Lua"
        ],
        "extensions": [
          ".lua"
        ]
      },
      {
        "id": "sjson",
        "aliases": [
          "Simplified JSON"
        ],
        "filenames": [
          "settings.ini"
        ],
        "extensions": [
          ".bsi",
          ".component",
          ".config",
          ".dcc_asset",
          ".decals",
          ".entity",
          ".flow_editor",
          ".flow",
          ".font",
          ".import_options",
          ".landscape",
          ".level",
          ".material",
          ".mouse_cursor",
          ".network_config",
          ".package",
          ".particle_editor",
          ".particles",
          ".physics_properties",
          ".physics",
          ".plugin",
          ".render_config",
          ".script_flow_nodes",
          ".shader_node",
          ".shader_source",
          ".shader",
          ".shading_environment_template",
          ".shading_environment",
          ".sjson",
          ".sound_environment",
          ".stingray_layout",
          ".stingray_plugin",
          ".stingray_project",
          ".strings",
          ".surface_properties",
          ".texture_category",
          ".texture",
          ".timpani_bank",
          ".timpani_master",
          ".type",
          ".unit_anim",
          ".unit",
          ".volume_type"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stingray-output",
        "scopeName": "source.stingray-output",
        "path": "./syntaxes/stingray-output.json"
      },
      {
        "language": "crashlog",
        "scopeName": "source.crashlog",
        "path": "./syntaxes/crashlog.json"
      },
      {
        "language": "lua",
        "scopeName": "source.toadman.lua",
        "path": "./syntaxes/lua-stingray.json"
      },
      {
        "language": "sjson",
        "scopeName": "source.sjson",
        "path": "./syntaxes/sjson.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "toadman-code-assist",
          "title": "Toadman Code Assist",
          "icon": "resources/toadman-code-assist.svg",
          "when": "toadman-code-assist:isStingrayProject"
        }
      ]
    },
    "views": {
      "toadman-code-assist": [
        {
          "id": "toadman-code-assist-Targets",
          "name": "Targets",
          "when": "toadman-code-assist:isStingrayProject"
        },
        {
          "id": "toadman-code-assist-Connections",
          "name": "Connections",
          "when": "toadman-code-assist:isStingrayProject"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "toadman-code-assist-Connections",
        "contents": "[Scan for instances on localhost](command:toadman-code-assist.Target.scan)",
        "when": "editorIsOpen"
      }
    ],
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "hydra",
        "label": "Hydra",
        "program": "./out/stingray-debug-adapter.js",
        "runtime": "node",
        "configurationSnippets": [
          {
            "label": "Hydra: Launch win32",
            "description": "Launch the engine and immediately attach the debugger.",
            "body": {
              "type": "hydra",
              "request": "launch",
              "toolchain": "^\"\\${config:Hydra.toolchainPath}/\\${config:Hydra.toolchainName}\"",
              "arguments": "",
              "name": "${1:My Launch Configuration}",
              "preLaunchTask": "hydra: compile for win32"
            }
          },
          {
            "label": "Hydra: Attach",
            "description": "Attach to a running instance of the engine.",
            "body": {
              "type": "hydra",
              "request": "attach",
              "toolchain": "^\"\\${config:Hydra.toolchainPath}/\\${config:Hydra.toolchainName}\"",
              "ip": "{3:localhost}",
              "port": "${4:14000}",
              "name": "${5:Attach to ${3}:${4}}"
            }
          }
        ],
        "initialConfigurations": [
          {
            "type": "hydra",
            "request": "launch",
            "toolchain": "${config:Hydra.toolchainPath}/${config:Hydra.toolchainName}",
            "arguments": "",
            "name": "Default Launch",
            "preLaunchTask": "hydra: compile for win32"
          }
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "ip",
              "port",
              "toolchain"
            ],
            "properties": {
              "ip": {
                "type": "string",
                "description": "IP address of the device running the engine.",
                "default": "127.0.0.1"
              },
              "port": {
                "type": "number",
                "description": "Port used by the engine for console connections.",
                "default": 14000
              },
              "toolchain": {
                "type": "string",
                "description": "The absolute path to the toolchain.",
                "default": "^\"\\${config:Hydra.toolchainPath}/\\${config:Hydra.toolchainName}\""
              }
            }
          },
          "launch": {
            "required": [
              "toolchain"
            ],
            "properties": {
              "timeout": {
                "type": "number",
                "description": "Abort the launch if it takes longer than this to attach (seconds).",
                "default": 5
              },
              "arguments": {
                "type": "string",
                "description": "Extra arguments.",
                "default": ""
              },
              "toolchain": {
                "type": "string",
                "description": "The absolute path to the toolchain.",
                "default": "^\"\\${config:Hydra.toolchainPath}/\\${config:Hydra.toolchainName}\""
              },
              "detach": {
                "type": "boolean",
                "description": "If true, the game will stay open after the debugger disconnects.",
                "default": false
              }
            }
          }
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "hydra",
        "required": [
          "platform"
        ],
        "properties": {
          "platform": {
            "type": "string",
            "enum": [
              "win32",
              "ps4",
              "xb1",
              "xb12"
            ],
            "description": "Target platform to compile for.",
            "default": "win32"
          },
          "bundle": {
            "type": "boolean",
            "description": "If true, the result will be bundled.",
            "default": false
          },
          "refresh": {
            "type": "boolean",
            "description": "If true, on a successful compile all connected game instances will be reloaded.",
            "default": false
          },
          "watch": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "An optional list of filesystem patterns to watch.",
            "default": [
              "**/*.lua"
            ]
          }
        },
        "when": "customExecutionSupported"
      }
    ],
    "problemPatterns": [
      {
        "name": "hydra-build-lua-error",
        "regexp": "([^:]+\\.lua):(\\d+): (.*)$",
        "file": 1,
        "message": 3,
        "location": 2
      },
      {
        "name": "hydra-build-sjson-error",
        "regexp": "^([^(]+)\\((\\d+):(\\d+)\\): (.*)$",
        "file": 1,
        "message": 4,
        "line": 2,
        "column": 3
      },
      {
        "name": "hydra-build-parse-error",
        "regexp": "Error compiling `([^`]+)`: Parse error '(.*?)' at line (\\d+):",
        "file": 1,
        "message": 2,
        "location": 3
      },
      {
        "name": "hydra-build-generic-error",
        "regexp": "Error compiling `([^`]+)`: (.*)$",
        "file": 1,
        "message": 2,
        "kind": "file"
      }
    ],
    "problemMatchers": [
      {
        "name": "hydra-build-lua-error",
        "label": "Hydra Lua Errors",
        "owner": "hydra",
        "pattern": "$hydra-build-lua-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "hydra-build-sjson-error",
        "label": "Hydra sjson Error",
        "owner": "hydra",
        "pattern": "$hydra-build-sjson-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "hydra-build-parse-error",
        "label": "Hydra Parse Error",
        "owner": "hydra",
        "pattern": "$hydra-build-parse-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "hydra-build-generic-error",
        "label": "Hydra Generic Error",
        "owner": "hydra",
        "pattern": "$hydra-build-generic-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "simplified-json": "^0.3.0",
    "vscode-debugadapter": "^1.51.0",
    "vscode-debugprotocol": "^1.51.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vsce": "^2.6.7"
  }
}
